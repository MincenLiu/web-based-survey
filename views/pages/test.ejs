	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">


	<script type="text/javascript">
		$(document).ready(() => {
			$("#form1").submit((event) => {
				event.preventDefault();
				$.ajax({
					type: 'POST',
					url: '/test',
					data: $('#form1').serialize(),
					dataType: "json",
					success: (response) => {
						$('#form1')[0].reset();
						document.getElementById("check").innerHTML = response.Success;
						//ADD THIS CODE
						setTimeout(() => {
							document.getElementById("check").innerHTML = "";
						}, 3000);
						if (response.Success == "You are regestered.") {
							document.getElementById("aa").click();
						};
					},
					error: () => {
					}
				})
			});
		});
	</script>

<body>

	<div class="col-md-4 col-md-offset-4 form-card">
		<div>
            <h1><span class="fa fa-sign-in"></span> Register Now</h1>
		</div>
        <div>
        <span>Welcome to our demo Page. We use the UNC Teen Survey as a survey template. You could 
            schedule delivery of survey invitations to reach your participants.
            Once you choose the ideal dates, your invitations will be sent automatically everyday.
        </span>
        </div>
		<div class="form-group">
			<form id="form1" method="post">
                <label>ID</label>
				<input type="text" name="id" placeholder="Input a number", required=""  class="form-control"><br/>
                <label>Start Date</label>
				<input type="date" name="startdate" placeholder="Input a date" required="" class="form-control"><br />
                <label>End Date</label>
				<input type="date" name="enddate" placeholder="Input a date" required="" class="form-control"><br/>
                <label>Phone number</label>
				<input type="text" name="phone" placeholder="Enter your phone number to recevie the survey link", required=""  class="form-control"><br/>
				<input type="submit" value="Register" class="btn btn-success">
			</form>
		</div>

		<div class="mssg bg-danger">
			<span id="check"></span>
		</div>
		</div>
	</div>
</body>

